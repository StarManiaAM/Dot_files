# Quick add, commit (tag) and push
quick_git(){
    git add .
    git commit -m "$1"
    if [ $# -eq 2 ]; then
        git tag -ma "$2"
        git push --follow-tags
    else
        git tag -ma "$1"
        git push --follow-tags
    fi
}

# Create and move to the directory
alias mkcd="my_mkcd"
my_mkcd(){
    mkdir -p $1; cd $1
}

